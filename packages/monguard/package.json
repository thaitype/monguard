{
  "name": "monguard",
  "version": "0.0.0",
  "type": "module",
  "description": "A lightweight, zero-boilerplate toolkit designed to enhance MongoDB or Mongoose models with production-ready features",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "default": "./dist/main.cjs"
    }
  },
  "scripts": {
    "start": "tsx src/main.ts",
    "dev": "tsx watch src/main.ts",
    "test:coverage": "vitest run --coverage",
    "test": "vitest",
    "test:ci": "vitest run",
    "build": "tsup src/main.ts --dts --format esm,cjs",
    "format": "prettier -w src",
    "lint": "tsc --noEmit && eslint ./src && prettier -c src",
    "lint:fix": "eslint --fix ./src && prettier -w src",
    "changeset": "changeset",
    "release": "npm run all && changeset publish",
    "all": "run-s lint build"
  },
  "peerDependencies": {
    "esbuild": ">=0.25.0 <1.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@monguard/eslint-config": "workspace:*",
    "@monguard/typescript-config": "workspace:*",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9.27.0",
    "mongodb": "^6.17.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "vitest": "^3.1.4"
  },
  "keywords": [],
  "author": "Thada Wangthammang",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thaitype/monguard.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/thaitype/monguard",
  "dependencies": {
    "@thaitype/core-utils": "^1.1.1",
    "chokidar": "^4.0.3",
    "execa": "^8.0.1",
    "lodash-es": "^4.17.21",
    "unconfig": "^7.3.1",
    "yargs": "^17.7.2",
    "zod": "^3.25.30"
  }
}